  <body>

  <% if current_user.present? %>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">

    <%= link_to image_tag('certified.out_logo.png'), root_path %>
    </div>
    <ul class="nav navbar-nav">

      
      <a class="btn btn-light" href="/" role="button">Home</a>
      <% if can? :index, @user%>
      <a class="btn btn-light" href="/users" role="button">Students</a>
      <% end %>
      <a class="btn btn-light" href="/cohorts" role="button">Cohorts</a>
      <%= link_to "Profile", user_path(current_user.id), class: "btn btn-light" %>

      <% if user_signed_in?%>
<%= link_to "Sign Out", session_path, method: :delete, class: "btn btn-light",
        data: {confirm: "Are you sure you want to log out?"}%>
    
    </ul>
    <% end %>
  <%#= flash[:notice] || flash[:alert] %>

    </div>
  <% end %>

  </nav>
  <div class="body-container">
    <%= yield %>

